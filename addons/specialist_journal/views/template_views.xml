<odoo>
  <record model="ir.ui.view" id="view_specialist_template_list">
    <field name="name">specialist.template.list</field>
    <field name="model">specialist.template</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
      </list>
    </field>
  </record>

  <record model="ir.ui.view" id="view_specialist_template_form">
    <field name="name">specialist.template.form</field>
    <field name="model">specialist.template</field>
    <field name="arch" type="xml">
      <form string="Template">
        <sheet>
          <field name="name"/>
          <field name="content"/>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_specialist_templates" model="ir.actions.act_window">
    <field name="name">Specialist Templates</field>
    <field name="res_model">specialist.template</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Create templates which specialists can insert into journal entries.
      </p>
    </field>
  </record>

  <menuitem id="menu_specialist_root" name="Specialist Journal" sequence="90"/>
  <menuitem id="menu_specialist_templates" name="Templates" parent="menu_specialist_root" action="action_specialist_templates"/>
</odoo>
