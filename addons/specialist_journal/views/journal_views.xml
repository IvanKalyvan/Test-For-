<odoo>
  <record model="ir.ui.view" id="view_specialist_journal_list">
    <field name="name">specialist.journal.list</field>
    <field name="model">specialist.journal</field>
    <field name="arch" type="xml">
      <list>
        <field name="date"/>
        <field name="specialist_id"/>
        <field name="partner_id"/>
      </list>
    </field>
  </record>

  <record model="ir.ui.view" id="view_specialist_journal_form">
    <field name="name">specialist.journal.form</field>
    <field name="model">specialist.journal</field>
    <field name="arch" type="xml">
      <form string="Journal Entry">
        <sheet>
          <group>
            <field name="date"/>
            <field name="specialist_id"/>
            <field name="partner_id"/>
          </group>
          <group>
            <field name="template_ids" widget="many2many_tags"/>
          </group>
          <group>
            <field name="content"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_specialist_journal" model="ir.actions.act_window">
    <field name="name">Journal Entries</field>
    <field name="res_model">specialist.journal</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_specialist_journal" name="Entries" parent="menu_specialist_root" action="action_specialist_journal"/>
</odoo>
